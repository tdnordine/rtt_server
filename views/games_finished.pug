//- vim:ts=4:sw=4:
doctype html
html
	head
		include head
		title= SITE_NAME
	body
		include header
		article.wide
			if user && user.user_id === who.user_id
				h1 Your finished games
			else
				h1 #{who.name}&rsquo;s finished games

			if games.length > 0
				+gamelist(games)
			else
				p Nothing here.
